<body>
    <header>
        <h1>Product Details</h1>
        <ul class="nav-links">
            <li><a asp-controller="Home" asp-action="Index">Home</a></li>
            <li><a asp-controller="Product" asp-action="Index">All Products</a></li>
            <li><a asp-controller="Category" asp-action="Products" asp-route-id="@Model.CategoryId">Back to @Model.CategoryName</a></li>
        </ul>
    </header>

    <div class="product-details">
        <div class="product-image">
            <img src="@Model.ImageUrl" alt="@Model.Name">
        </div>
        <div class="product-info">
            <h1>@Model.Name</h1>
            <p><strong>Category:</strong> @Model.CategoryName</p>
            <p class="price">$@Model.Price</p>
            <p>@Model.Description</p>
            <p class="stock-info" style="color: @(Model.Quantity > 0 ? "green" : "red")">
                @if (Model.Quantity > 0)
                {
                    <text>✓ In Stock (@Model.Quantity available)</text>
                }
                else
                {
                    <text>✗ Out of Stock</text>
                }
            </p>

            @if (Model.Quantity > 0)
            {
                <div class="quantity-controls" style="justify-content: flex-start;">
                    <button class="quantity-btn decrease-qty" data-product-id="@Model.ProductId">
                        −
                    </button>
                    <div class="quantity-display" data-product-id="@Model.ProductId">1</div>
                    <button class="quantity-btn increase-qty"
                            data-product-id="@Model.ProductId"
                            data-max-stock="@Model.Quantity">
                        +
                    </button>
                </div>
            }

            <button class="btn add-to-cart"
                    data-id="@Model.ProductId"
                    data-name="@Model.Name"
                    @(Model.Quantity <= 0 ? "disabled" : "")>
                @(Model.Quantity > 0 ? "Add to Cart" : "Out of Stock")
            </button>
        </div>
    </div>

    @if (Model.RelatedProducts.Any())
    {
        <div class="related-products">
            <h2>Related Products</h2>
            <div class="products-grid">
                @foreach (var product in Model.RelatedProducts)
                {
                    <div class="product-card">
                        <img src="@product.ImageUrl" alt="@product.Name">
                        <h3>@product.Name</h3>
                        <p class="price">$@product.Price</p>
                        <a asp-controller="Product" asp-action="Details" asp-route-id="@product.ProductId">
                            <button class="btn">View Details</button>
                        </a>
                    </div>
                }
            </div>
        </div>
    }

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function() {
            // Increase quantity
            $('.increase-qty').click(function() {
                const productId = $(this).data('product-id');
                const maxStock = $(this).data('max-stock');
                const $quantityDisplay = $(`.quantity-display[data-product-id="${productId}"]`);
                let currentQty = parseInt($quantityDisplay.text());

                if (currentQty >= maxStock) {
                    alert('Maximum stock reached!');
                    return;
                }

                $quantityDisplay.text(currentQty + 1);
            });

            // Decrease quantity
            $('.decrease-qty').click(function() {
                const productId = $(this).data('product-id');
                const $quantityDisplay = $(`.quantity-display[data-product-id="${productId}"]`);
                let currentQty = parseInt($quantityDisplay.text());

                if (currentQty <= 1) {
                    return;
                }

                $quantityDisplay.text(currentQty - 1);
            });

            $('.add-to-cart').click(function() {
                const productId = $(this).data('id');
                const productName = $(this).data('name');
                const $quantityDisplay = $(`.quantity-display[data-product-id="${productId}"]`);
                const quantity = parseInt($quantityDisplay.text()) || 1;

                $.ajax({
                    url: '@Url.Action("AddToCart", "Cart")',
                    type: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify({ productId: productId, quantity: quantity }),
                    success: function(response) {
                        if (response.success) {
                            alert(productName + ' (Qty: ' + quantity + ') added to cart!');
                            window.location.href = '@Url.Action("Index", "Cart")';
                        } else {
                            if (response.redirectToLogin) {
                                alert('Please login first');
                                window.location.href = '@Url.Action("Login", "Account")';
                            } else {
                                alert(response.message);
                            }
                        }
                    }
                });
            });
        });
    </script>
</body>
</html>