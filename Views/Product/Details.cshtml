@model Home_furnishings.ViewModels.ProductDetailsViewModel

@{
    ViewData["Title"] = Model.Name;
    Layout = "_MyLayout";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        body {
            margin: 0;
            font-family: Arial, sans-serif;
            background: #f5f5f5;
        }

        header {
            background: #873e23;
            color: white;
            padding: 15px 20px;
        }

            header h1 {
                margin: 0;
            }

        .nav-links {
            list-style: none;
            display: flex;
            gap: 30px;
            margin: 10px 0 0 0;
            padding: 0;
        }

            .nav-links a {
                color: white;
                text-decoration: none;
            }

        .product-details {
            max-width: 1200px;
            margin: 30px auto;
            background: white;
            padding: 30px;
            border-radius: 12px;
            box-shadow: 0 4px 10px rgba(0,0,0,0.1);
            display: flex;
            gap: 40px;
        }

   

        .product-info {
            flex: 1;
        }

            .product-info h1 {
                color: #873e23;
                margin-top: 0;
            }

        .price {
            font-size: 2rem;
            color: #c0392b;
            font-weight: bold;
            margin: 20px 0;
        }

        .stock-info {
            font-size: 1.1rem;
            margin: 10px 0;
        }

        .btn {
            background: #c0392b;
            color: white;
            padding: 12px 30px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 1rem;
            margin-top: 20px;
        }

            .btn:hover {
                background: #e74c3c;
            }

            .btn:disabled {
                background: #ccc;
                cursor: not-allowed;
            }

        .related-products {
            max-width: 1200px;
            margin: 30px auto;
            padding: 20px;
        }

            .related-products h2 {
                color: #873e23;
                text-align: center;
            }

        .products-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
            margin-top: 20px;
        }

        .product-card {
            background: white;
            border-radius: 10px;
            padding: 15px;
            text-align: center;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        }

            .product-card img {
                width: 100%;
                height: 200px;
                object-fit: cover;
                border-radius: 8px;
            }


   
        /* Also fix for the box-image container */
        .box-image {
            width:100%;
            height: 200px;
            overflow: hidden; /* Prevent overflow */
            border-radius: 8px;
            margin-bottom: 10px;
        }

            .box-image img {
                width: 100%;
                height: 100%;
                object-fit: cover; /* Crop to fit container */
                transition: transform 0.3s ease;
                display: block;
            }







