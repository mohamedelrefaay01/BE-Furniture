@model Home_furnishings.ViewModels.ProductViewModel

@{
    ViewData["Title"] = "Create Product";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            padding: 40px 20px;
        }

        .form-container {
            max-width: 700px;
            margin: 0 auto;
            background: white;
            border-radius: 20px;
            padding: 40px;
            box-shadow: 0 10px 40px rgba(0,0,0,0.2);
        }

        .form-header {
            text-align: center;
            margin-bottom: 30px;
        }

            .form-header h1 {
                color: #2c3e50;
                font-size: 2.5rem;
                margin-bottom: 10px;
            }

        .form-group {
            margin-bottom: 25px;
        }

            .form-group label {
                display: block;
                color: #34495e;
                font-weight: 600;
                margin-bottom: 8px;
                font-size: 1rem;
            }

            .form-group input,
            .form-group select,
            .form-group textarea {
                width: 100%;
                padding: 12px 15px;
                border: 2px solid #e0e0e0;
                border-radius: 10px;
                font-size: 1rem;
                transition: all 0.3s ease;
                box-sizing: border-box;
            }

                .form-group input:focus,
                .form-group select:focus,
                .form-group textarea:focus {
                    outline: none;
                    border-color: #667eea;
                    box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
                }

            .form-group textarea {
                resize: vertical;
                min-height: 100px;
            }

        .form-check {
            display: flex;
            align-items: center;
            gap: 10px;
        }

            .form-check input[type="checkbox"] {
                width: 20px;
                height: 20px;
                cursor: pointer;
            }

        .btn-submit {
            width: 100%;
            padding: 15px;
            background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);
            color: white;
            border: none;
            border-radius: 10px;
            font-size: 1.2rem;
            font-weight: 700;
            cursor: pointer;
            transition: all 0.3s ease;
            margin-top: 20px;
        }

            .btn-submit:hover {
                transform: translateY(-2px);
                box-shadow: 0 8px 25px rgba(17, 153, 142, 0.5);
            }

        .btn-cancel {
            display: block;
            text-align: center;
            color: #7f8c8d;
            text-decoration: none;
            margin-top: 15px;
            font-weight: 600;
        }

            .btn-cancel:hover {
                color: #34495e;
            }

        .field-validation-error {
            color: #e74c3c;
            font-size: 0.875rem;
            margin-top: 5px;
        }
    </style>
</head>
<body>
    <div class="form-container">
        <div class="form-header">
            <h1>Create New Product</h1>
            <p>Fill in the details below to add a new product</p>
        </div>

        <form asp-action="Create" method="post">
            @Html.AntiForgeryToken()

            <div class="form-group">
                <label asp-for="Name">Product Name *</label>
                <input asp-for="Name" placeholder="Enter product name" required />
                <span asp-validation-for="Name" class="field-validation-error"></span>
            </div>

            <div class="form-group">
                <label asp-for="Price">Price ($) *</label>
                <input asp-for="Price" type="number" step="0.01" placeholder="0.00" required />
                <span asp-validation-for="Price" class="field-validation-error"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description">Description</label>
                <textarea asp-for="Description" placeholder="Enter product description"></textarea>
                <span asp-validation-for="Description" class="field-validation-error"></span>
            </div>

            <div class="form-group">
                <label asp-for="ImageUrl">Image URL *</label>
                <input asp-for="ImageUrl" placeholder="https://example.com/image.jpg" required />
                <span asp-validation-for="ImageUrl" class="field-validation-error"></span>
            </div>

            <div class="form-group">
                <label asp-for="Quantity">Quantity in Stock *</label>
                <input asp-for="Quantity" type="number" min="0" placeholder="0" required />
                <span asp-validation-for="Quantity" class="field-validation-error"></span>
            </div>

            <div class="form-group">
                <label asp-for="CategoryId">Category *</label>
                <select asp-for="CategoryId" required>
                    <option value="">-- Select Category --</option>
                    @foreach (var category in ViewBag.Categories)
                    {
                        <option value="@category.CategoryId">@category.Name</option>
                    }
                </select>
                <span asp-validation-for="CategoryId" class="field-validation-error"></span>
            </div>

            <div class="form-group">
                <div class="form-check">
                    <input asp-for="IsActive" type="checkbox" checked />
                    <label asp-for="IsActive">Active (Available for sale)</label>
                </div>
            </div>

            <button type="submit" class="btn-submit">✓ Create Product</button>
            <a asp-controller="Product" asp-action="Index" class="btn-cancel">Cancel</a>
        </form>
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>