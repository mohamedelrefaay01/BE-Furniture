@model Home_furnishings.ViewModels.CartViewModel

@{
    ViewData["Title"] = "Your Shopping Cart";
    Layout = "_MyLayout";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 0;
            background: #f5f5f5;
            color: #333;
        }

        .cart-container {
            max-width: 1000px;
            margin: 40px auto;
            background: white;
            padding: 30px;
            border-radius: 16px;
            box-shadow: 0 4px 20px rgba(0,0,0,0.1);
        }

        .cart-item {
            display: flex;
            align-items: center;
            justify-content: space-between;
            margin-bottom: 20px;
            border-bottom: 2px solid #ecf0f1;
            padding: 20px;
            border-radius: 12px;
            transition: background 0.2s;
        }

        .cart-item:hover {
            background: #f8f9fa;
        }

        .cart-item img {
            width: 120px;
            height: 120px;
            object-fit: cover;
            border-radius: 10px;
            margin-right: 20px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        }

        .cart-details {
            flex-grow: 1;
            padding: 0 20px;
        }

        .cart-details h3 {
            margin: 0 0 10px 0;
            font-size: 1.3rem;
            color: #2c3e50;
        }

        .price {
            color: #e74c3c;
            font-weight: bold;
            font-size: 1.2rem;
            margin: 8px 0;
        }

        /* Quantity Controls in Cart */
        .quantity-controls {
            display: flex;
            align-items: center;
            gap: 12px;
            margin: 15px 0;
        }

        .quantity-btn {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border: none;
            width: 36px;
            height: 36px;
            border-radius: 8px;
            cursor: pointer;
            font-size: 1.4rem;
            font-weight: bold;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: all 0.3s ease;
            box-shadow: 0 3px 10px rgba(102, 126, 234, 0.4);
        }

        .quantity-btn:hover {
            background: linear-gradient(135deg, #764ba2 0%, #667eea 100%);
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(102, 126, 234, 0.6);
        }

        .quantity-btn:disabled {
            background: linear-gradient(135deg, #bdc3c7 0%, #95a5a6 100%);
            cursor: not-allowed;
            box-shadow: none;
        }

        .quantity-display {
            font-size: 1.3rem;
            font-weight: 700;
            min-width: 40px;
            text-align: center;
            color: #2c3e50;
        }

        .stock-info {
            font-size: 0.85rem;
            color: #7f8c8d;
            margin-top: 5px;
        }

        .remove-btn {
            background: linear-gradient(135deg, #fc4a1a 0%, #f7b733 100%);
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 8px;
            cursor: pointer;
            transition: 0.3s;
            font-size: 0.95rem;
            font-weight: 600;
            box-shadow: 0 3px 10px rgba(252, 74, 26, 0.4);
        }

        .remove-btn:hover {
            background: linear-gradient(135deg, #f7b733 0%, #fc4a1a 100%);
            transform: scale(1.05);
            box-shadow: 0 5px 15px rgba(252, 74, 26, 0.6);
        }

        .total-box {
            margin-top: 30px;
            padding: 20px;
            border-radius: 12px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            text-align: center;
            font-size: 1.5rem;
            font-weight: bold;
            color: white;
            box-shadow: 0 4px 15px rgba(102, 126, 234, 0.4);
        }

        .empty-message {
            text-align: center;
            padding: 60px;
            font-size: 1.2rem;
            color: #95a5a6;
        }

        .action-buttons {
            display: flex;
            justify-content: space-between;
            gap: 20px;
            margin-top: 25px;
        }

        .btn {
            padding: 14px 30px;
            border: none;
            border-radius: 10px;
            cursor: pointer;
            font-size: 1.1rem;
            font-weight: 600;
            transition: all 0.3s ease;
            flex: 1;
        }

        .btn-primary {
            background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);
            color: white;
            box-shadow: 0 4px 15px rgba(17, 153, 142, 0.4);
        }

        .btn-primary:hover {
            background: linear-gradient(135deg, #38ef7d 0%, #11998e 100%);
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(17, 153, 142, 0.6);
        }

        .btn-danger {
            background: linear-gradient(135deg, #fc4a1a 0%, #f7b733 100%);
            color: white;
            box-shadow: 0 4px 15px rgba(252, 74, 26, 0.4);
        }

        .btn-danger:hover {
            background: linear-gradient(135deg, #f7b733 0%, #fc4a1a 100%);
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(252, 74, 26, 0.6);
        }
    </style>
</head>
<body>
    <div class="cart-container">
        @if (Model.Items.Any())
        {
            @foreach (var item in Model.Items)
            {
                <div class="cart-item" data-product-id="@item.ProductId">
                    <img src="@item.ImageUrl" alt="@item.ProductName">
                    <div class="cart-details">
                        <h3>@item.ProductName</h3>
                        <div class="price">Unit Price: $<span class="item-price">@item.Price</span></div>

                        @if (item.IsInStock)
                        {
                            <div class="quantity-controls">
                                <button class="quantity-btn decrease-qty" data-product-id="@item.ProductId">
                                    −
                                </button>
                                <span class="quantity-display" data-product-id="@item.ProductId">@item.Quantity</span>
                                <button class="quantity-btn increase-qty"
                                        data-product-id="@item.ProductId"
                                        data-max-stock="@item.AvailableStock">
                                    +
                                </button>
                            </div>
                            <div class="stock-info">Available: @item.AvailableStock items</div>
                        }
                        else
                        {
                            <p style="color: red; font-weight: 600;">⚠️ Out of Stock</p>
                        }

                        <div class="price" style="margin-top: 10px; font-size: 1.1rem;">
                            Subtotal: $<span class="item-subtotal">@item.SubTotal.ToString("F2")</span>
                        </div>
                    </div>
                    <button class="remove-btn" data-product-id="@item.ProductId">🗑️ Remove</button>
                </div>
            }

            <div class="total-box">
                <span>🛒 Cart Total: </span>
                <span id="totalPrice">$@Model.TotalPrice.ToString("F2")</span>
            </div>

            <div class="action-buttons">
                <button class="btn btn-danger" id="clearCart">🗑️ Clear Cart</button>
                <button class="btn btn-primary" id="checkout">✓ Proceed to Checkout</button>
            </div>
        }
        else
        {
            <div class="empty-message">
                <div style="font-size: 4rem; margin-bottom: 20px;">🛒</div>
                <h2>Your cart is empty</h2>
                <p><a asp-controller="Product" asp-action="Index" style="color: #667eea; text-decoration: none; font-weight: 600;">Continue Shopping →</a></p>
            </div>
        }
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function() {
            // Increase quantity in cart
            $('.increase-qty').click(function() {
                const productId = $(this).data('product-id');
                const maxStock = $(this).data('max-stock');
                const $quantityDisplay = $(`.quantity-display[data-product-id="${productId}"]`);
                let currentQty = parseInt($quantityDisplay.text());

                if (currentQty >= maxStock) {
                    alert('⚠️ Maximum stock reached!');
                    return;
                }

                updateQuantity(productId, currentQty + 1);
            });

            // Decrease quantity in cart
            $('.decrease-qty').click(function() {
                const productId = $(this).data('product-id');
                const $quantityDisplay = $(`.quantity-display[data-product-id="${productId}"]`);
                let currentQty = parseInt($quantityDisplay.text());

                if (currentQty <= 1) {
                    alert('ℹ️ Minimum quantity is 1. Use Remove button to delete item.');
                    return;
                }

                updateQuantity(productId, currentQty - 1);
            });

            // Update quantity function
            function updateQuantity(productId, newQuantity) {
                $.ajax({
                    url: '@Url.Action("UpdateQuantity", "Cart")',
                    type: 'POST',
                    data: {
                        productId: productId,
                        quantity: newQuantity
                    },
                    success: function(response) {
                        if (response.success) {
                            // Update quantity display
                            $(`.quantity-display[data-product-id="${productId}"]`).text(newQuantity);

                            // Update item subtotal
                            const $cartItem = $(`.cart-item[data-product-id="${productId}"]`);
                            $cartItem.find('.item-subtotal').text(response.itemSubTotal.toFixed(2));

                            // Update total price
                            $('#totalPrice').text('$' + response.totalPrice.toFixed(2));
                        } else {
                            alert('⚠️ ' + response.message);
                        }
                    },
                    error: function() {
                        alert('❌ Error updating quantity');
                    }
                });
            }

            // Remove item from cart
            $('.remove-btn').click(function() {
                const productId = $(this).data('product-id');
                const cartItem = $(this).closest('.cart-item');

                if (confirm('🗑️ Are you sure you want to remove this item?')) {
                    $.ajax({
                        url: '@Url.Action("Remove", "Cart")',
                        type: 'POST',
                        data: { productId: productId },
                        success: function(response) {
                            if (response.success) {
                                cartItem.fadeOut(300, function() {
                                    $(this).remove();
                                    $('#totalPrice').text('$' + response.totalPrice.toFixed(2));

                                    if ($('.cart-item').length === 0) {
                                        location.reload();
                                    }
                                });
                            }
                        },
                        error: function() {
                            alert('❌ Error removing item');
                        }
                    });
                }
            });

            // Clear cart
            $('#clearCart').click(function() {
                if (confirm('🗑️ Are you sure you want to clear your entire cart?')) {
                    $.ajax({
                        url: '@Url.Action("Clear", "Cart")',
                        type: 'POST',
                        success: function(response) {
                            if (response.success) {
                                location.reload();
                            }
                        },
                        error: function() {
                            alert('❌ Error clearing cart');
                        }
                    });
                }
            });

            // Checkout
            $('#checkout').click(function() {
                // Redirect to checkout page or show alert
                window.location.href = '@Url.Action("Index", "Orders")';
                // Or: alert('✓ Checkout functionality coming soon!');
            });
        });
    </script>
</body>
</html>