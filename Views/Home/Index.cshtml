@model Home_furnishings.ViewModels.HomeViewModel

@{
    ViewData["Title"] = "FurnitureStore - Home";
    Layout = "_Layout";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/main.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <style>
        /* ===== General Reset ===== */
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f7f7f7;
            margin: 0;
            padding: 0;
        }

        h2 {
            text-align: center;
            font-size: 2.5rem;
            margin-top: 60px;
            color: #333;
            position: relative;
        }

            h2::after {
                content: '';
                width: 80px;
                height: 4px;
                background: #873e23;
                display: block;
                margin: 10px auto 0;
                border-radius: 2px;
            }

        /* ===== Products Section ===== */
        .products {
            max-width: 1200px;
            margin: 60px auto;
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 30px;
            padding: 0 20px;
        }

        .box {
            background: #fff;
            border-radius: 16px;
            box-shadow: 0 6px 20px rgba(0, 0, 0, 0.08);
            text-align: center;
            padding: 25px;
            transition: all 0.4s ease;
            position: relative;
            overflow: hidden;
            opacity: 0;
            transform: translateY(40px);
            animation: fadeUp 0.8s ease forwards;
        }

            .box:nth-child(even) {
                animation-delay: 0.2s;
            }

            .box:nth-child(odd) {
                animation-delay: 0.4s;
            }

            .box:hover {
                transform: translateY(-10px) scale(1.03);
                box-shadow: 0 10px 30px rgba(0, 120, 255, 0.2);
            }

            .box h4 {
                font-size: 1.3rem;
                color: #222;
                margin-bottom: 15px;
            }

        .box-image {
            width: 100%;
            height: 200px;
            overflow: hidden;
            border-radius: 12px;
            margin-bottom: 15px;
        }

            .box-image img {
                width: 100%;
                height: 100%;
                object-fit: cover;
                transition: transform 0.4s ease;
            }

        .box:hover .box-image img {
            transform: scale(1.1);
        }

        .box p {
            color: #555;
            font-size: 0.95rem;
        }

        /* ===== Animation ===== */
        @@keyframes fadeUp {
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* ===== Button Styling (optional) ===== */
        .btn-explore {
            display: inline-block;
            background: #873e23;
            color: #fff;
            padding: 10px 20px;
            border-radius: 8px;
            margin-top: 15px;
            text-decoration: none;
            transition: background 0.3s;
        }

            .btn-explore:hover {
                background: #e74c3c;
            }
    </style>
</head>
<body>








    @if (TempData["SuccessMessage"] != null)
    {
        <div class="success-notification" id="successNotification">
            <div class="success-content">
                <span class="success-icon">✓</span>
                <span class="success-text">@TempData["SuccessMessage"]</span>
                <button class="close-btn" onclick="closeNotification()">×</button>
            </div>
        </div>
    }

    <style>
        .success-notification {
            position: fixed;
            top: 20px;
            right: 20px;
            z-index: 9999;
            animation: slideInRight 0.5s ease;
        }

        @@keyframes slideInRight {
            from {
                transform: translateX(400px);
                opacity: 0;
            }

            to {
                transform: translateX(0);
                opacity: 1;
            }
        }

        @@keyframes slideOutRight {
            from {
                transform: translateX(0);
                opacity: 1;
            }

            to {
                transform: translateX(400px);
                opacity: 0;
            }
        }

        .success-content {
            background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);
            color: white;
            padding: 20px 25px;
            border-radius: 12px;
            box-shadow: 0 8px 30px rgba(17, 153, 142, 0.4);
            display: flex;
            align-items: center;
            gap: 15px;
            min-width: 350px;
            max-width: 500px;
        }

        .success-icon {
            background: white;
            color: #11998e;
            width: 35px;
            height: 35px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.5rem;
            font-weight: bold;
            flex-shrink: 0;
        }

        .success-text {
            flex: 1;
            font-size: 1rem;
            font-weight: 600;
            line-height: 1.4;
        }

        .close-btn {
            background: rgba(255, 255, 255, 0.2);
            color: white;
            border: none;
            width: 30px;
            height: 30px;
            border-radius: 50%;
            cursor: pointer;
            font-size: 1.5rem;
            line-height: 1;
            transition: all 0.3s ease;
            flex-shrink: 0;
        }

            .close-btn:hover {
                background: rgba(255, 255, 255, 0.3);
                transform: rotate(90deg);
            }

        .slide-out {
            animation: slideOutRight 0.5s ease forwards;
        }

        @@media (max-width: 576px) {
            .success-notification {
                right: 10px;
                left: 10px;
            }

            .success-content {
                min-width: auto;
                padding: 15px 20px;
            }

            .success-text {
                font-size: 0.9rem;
            }
        }
    </style>

    <script>
        // Auto close notification after 5 seconds
        setTimeout(function() {
            closeNotification();
        }, 5000);

        function closeNotification() {
            const notification = document.getElementById('successNotification');
            if (notification) {
                notification.classList.add('slide-out');
                setTimeout(function() {
                    notification.style.display = 'none';
                }, 500);
            }
        }
    </script>








    <!-- Products Section -->
    <div class="products-section" style="align-content:center;text-align:center">
        <h2>Our Categories</h2>
        <div class="products">
            @foreach (var category in Model.Categories)
            {
                <div class="box" style="width:400px;border-radius:40px;">
                    <h4>@category.Name</h4>
                    <div class="box-image">
                        <a asp-controller="Category" asp-action="@category.Name">
                            <img src="@category.SampleImageUrl" alt="@category.Name">

                        </a>
                    </div>
                    <p>@category.ProductCount Products Available</p>
                    <a asp-controller="Category" asp-action="@category.Name" class="btn-explore">Explore</a>
                </div>
            }
        </div>
    </div>

</body>
</html>










