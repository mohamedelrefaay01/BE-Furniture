@model IEnumerable<Home_furnishings.Models.ApplicationUser>

@{
    ViewData["Title"] = "Manage User Roles";
    Layout = "_MyLayout";
}

<div class="container mt-4">
    <h2 class="text-primary mb-3">Manage User Roles</h2>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>User Name</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                    <td>
                        <a asp-action="EditUserRoles" asp-route-userId="@user.Id.ToString()" class="btn btn-primary btn-sm">
                            Manage Roles
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
