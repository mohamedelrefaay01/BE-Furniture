@model OrderViewModel

@{
    ViewData["Title"] = "Order Details";
    Layout = "_MyLayout";
}

<div class="container mt-4">
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-dark text-white">
            <h4>Order #@Model.OrderId</h4>
        </div>
        <div class="card-body">
            <p><strong>Date:</strong> @Model.OrderDate.ToString("dd/MM/yyyy")</p>
            <p><strong>Status:</strong> <span class="badge bg-secondary">@Model.OrderStatus</span></p>
            <p><strong>Total:</strong> @Model.TotalAmount.ToString("C")</p>
            <p><strong>Shipping Address:</strong> @Model.ShippingAddress</p>
            <p><strong>City:</strong> @Model.ShippingCity</p>
            <p><strong>Phone:</strong> @Model.PhoneNumber</p>
        </div>
    </div>

    <h5 class="mt-4">🧾 Order Items</h5>
    <table class="table table-bordered table-striped mt-2">
        <thead class="table-light">
            <tr>
                <th>Product</th>
                <th>Qty</th>
                <th>Unit Price</th>
                <th>Discount</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.OrderItems)
            {
                <tr>
                    <td>@item.ProductName</td>
                    <td>@item.Quantity</td>
                    <td>@item.UnitPrice.ToString("C")</td>
                    <td>@item.Discount.ToString("C")</td>
                    <td>@item.TotalPrice.ToString("C")</td>
                </tr>
            }
        </tbody>
    </table>

    <div class="text-end mt-3">
        <a asp-action="Index" class="btn btn-secondary">⬅ Back to Orders</a>
    </div>
</div>
