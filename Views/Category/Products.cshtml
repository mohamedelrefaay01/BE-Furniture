@model Home_furnishings.ViewModels.CategoryProductsViewModel

@{
    ViewData["Title"] = Model.CategoryName + " Department";
    Layout = "_MyLayout";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        body {
            margin: 0;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: #f5f5f5;
        }

        /* Success/Error Messages */
        .alert-message {
            position: fixed;
            top: 20px;
            right: 20px;
            z-index: 9999;
            padding: 15px 25px;
            border-radius: 10px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.2);
            animation: slideIn 0.5s ease;
        }

        .alert-success {
            background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);
            color: white;
        }

        .alert-error {
            background: linear-gradient(135deg, #fc4a1a 0%, #f7b733 100%);
            color: white;
        }

        @@keyframes slideIn {
            from {
                transform: translateX(400px);
                opacity: 0;
            }

            to {
                transform: translateX(0);
                opacity: 1;
            }
        }

        .products {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            gap: 30px;
            padding: 40px 20px;
            max-width: 1400px;
            margin: 0 auto;
        }

        .product {
            background: white;
            border-radius: 16px;
            padding: 20px;
            box-shadow: 0 2px 12px rgba(0,0,0,0.08);
            transition: all 0.3s ease;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

            .product:hover {
                transform: translateY(-8px);
                box-shadow: 0 8px 24px rgba(0,0,0,0.15);
            }

            .product img {
                width: 100%;
                height: 250px;
                object-fit: cover;
                border-radius: 12px;
                margin-bottom: 15px;
            }

            .product h3 {
                margin: 10px 0;
                font-size: 1.3rem;
                color: #2c3e50;
                text-align: center;
            }

            .product p {
                color: #7f8c8d;
                font-size: 0.95rem;
                margin: 8px 0;
                text-align: center;
                line-height: 1.5;
            }

        .price {
            color: #e74c3c;
            font-weight: bold;
            font-size: 1.5rem;
            margin: 12px 0;
        }

        /* Quantity Controls */
        .quantity-controls {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 12px;
            margin: 15px 0;
        }

        .quantity-btn {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border: none;
            width: 36px;
            height: 36px;
            border-radius: 8px;
            cursor: pointer;
            font-size: 1.5rem;
            font-weight: bold;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: all 0.3s ease;
            box-shadow: 0 4px 12px rgba(102, 126, 234, 0.4);
        }

            .quantity-btn:hover {
                background: linear-gradient(135deg, #764ba2 0%, #667eea 100%);
                transform: translateY(-3px) scale(1.05);
            }

        .quantity-display {
            font-size: 1.4rem;
            font-weight: 700;
            min-width: 45px;
            text-align: center;
            color: #2c3e50;
        }

        .btn {
            color: white;
            padding: 14px 28px;
            border: none;
            border-radius: 10px;
            cursor: pointer;
            margin-top: 12px;
            font-size: 1rem;
            font-weight: 600;
            transition: all 0.3s ease;
            width: 100%;
            box-shadow: 0 4px 15px rgba(245, 87, 108, 0.4);
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .btn-add-cart {
            background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
        }

            .btn-add-cart:hover {
                background: linear-gradient(135deg, #f5576c 0%, #f093fb 100%);
                transform: translateY(-2px);
            }

        /* Admin Action Buttons */
        .admin-actions {
            display: flex;
            gap: 8px;
            margin-top: 15px;
            width: 100%;
        }

        .btn-admin {
            flex: 1;
            padding: 10px;
            font-size: 0.9rem;
            border-radius: 8px;
            border: none;
            cursor: pointer;
            font-weight: 600;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-block;
            text-align: center;
        }

        .btn-edit {
            background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
            color: white;
        }

            .btn-edit:hover {
                background: linear-gradient(135deg, #00f2fe 0%, #4facfe 100%);
                transform: translateY(-2px);
                box-shadow: 0 4px 10px rgba(79, 172, 254, 0.4);
            }

        .btn-delete {
            background: linear-gradient(135deg, #fc4a1a 0%, #f7b733 100%);
            color: white;
        }

            .btn-delete:hover {
                background: linear-gradient(135deg, #f7b733 0%, #fc4a1a 100%);
                transform: translateY(-2px);
                box-shadow: 0 4px 10px rgba(252, 74, 26, 0.4);
            }

        .btn-create {
            position: fixed;
            bottom: 30px;
            right: 30px;
            background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);
            color: white;
            padding: 18px 35px;
            border-radius: 50px;
            border: none;
            font-size: 1.1rem;
            font-weight: 700;
            cursor: pointer;
            box-shadow: 0 8px 25px rgba(17, 153, 142, 0.5);
            transition: all 0.3s ease;
            z-index: 1000;
            text-decoration: none;
        }

            .btn-create:hover {
                transform: translateY(-5px) scale(1.05);
                box-shadow: 0 12px 35px rgba(17, 153, 142, 0.7);
            }

        .stock-status {
            font-weight: 600;
            font-size: 0.9rem;
            padding: 6px 12px;
            border-radius: 20px;
            margin: 8px 0;
        }

        .in-stock {
            color: #27ae60;
            background: #d5f4e6;
        }

        .out-of-stock {
            color: #e74c3c;
            background: #fadbd8;
        }
    </style>
</head>
<body>
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert-message alert-success" id="alertMessage">
            @TempData["SuccessMessage"]
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert-message alert-error" id="alertMessage">
            @TempData["ErrorMessage"]
        </div>
    }

    <!-- Floating Add Product Button -->
    <a asp-controller="Product" asp-action="Create" class="btn-create">
         Add New Product
    </a>

    <div class="products" id="productList">
        @if (Model.Products.Any())
        {
            @foreach (var product in Model.Products)
            {
                <div class="product" data-id="@product.ProductId">
                    <img src="@product.ImageUrl" alt="@product.Name">
                    <h3>@product.Name</h3>
                    <p>@product.Description</p>
                    <div class="price">$@product.Price</div>
                    <p class="stock-status @(product.IsInStock ? "in-stock" : "out-of-stock")">
                        @(product.IsInStock ? $"✓ In Stock ({product.Quantity})" : "✗ Out of Stock")
                    </p>

                    @if (product.IsInStock)
                    {
                        <div class="quantity-controls">
                            <button class="quantity-btn decrease-qty" data-product-id="@product.ProductId">
                                −
                            </button>
                            <span class="quantity-display" data-product-id="@product.ProductId">1</span>
                            <button class="quantity-btn increase-qty"
                                    data-product-id="@product.ProductId"
                                    data-max-stock="@product.Quantity">
                                +
                            </button>
                        </div>
                    }

                    <button class="btn btn-add-cart add-to-cart"
                            data-id="@product.ProductId"
                            data-name="@product.Name"
                            @(!product.IsInStock ? "disabled" : "")>
                        @(product.IsInStock ? "🛒 Add to Cart" : "Out of Stock")
                    </button>

                    <!-- Admin Action Buttons -->
                    <div class="admin-actions">
                        <a asp-controller="Product" asp-action="Edit" asp-route-id="@product.ProductId" class="btn-admin btn-edit">
                            ✏️ Edit
                        </a>
                        <form asp-controller="Product" asp-action="Delete" method="post" style="flex: 1; margin: 0;" onsubmit="return confirm('⚠️ Are you sure you want to delete this product?');">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@product.ProductId" />
                            <input type="hidden" name="categoryId" value="@Model.CategoryId" />
                            <button type="submit" class="btn-admin btn-delete" style="width: 100%;">
                                🗑️ Delete
                            </button>
                        </form>
                    </div>
                </div>
            }
        }
        else
        {
            <div style="text-align: center; padding: 50px; width: 100%; grid-column: 1 / -1;">
                <h2 style="color: #95a5a6;">No products available in this category</h2>
                <a asp-controller="Product" asp-action="Create" class="btn btn-add-cart" style="display: inline-block; width: auto; margin-top: 20px;">
                    ➕ Add First Product
                </a>
            </div>
        }
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function() {
            loadCartCount();

            // Auto-hide alert messages
            setTimeout(function() {
                $('#alertMessage').fadeOut('slow');
            }, 5000);

            // Quantity controls
            $('.increase-qty').click(function() {
                const productId = $(this).data('product-id');
                const maxStock = $(this).data('max-stock');
                const $quantityDisplay = $(`.quantity-display[data-product-id="${productId}"]`);
                let currentQty = parseInt($quantityDisplay.text());

                if (currentQty >= maxStock) {
                    alert('⚠️ Maximum stock reached!');
                    return;
                }

                $quantityDisplay.text(currentQty + 1);
            });

            $('.decrease-qty').click(function() {
                const productId = $(this).data('product-id');
                const $quantityDisplay = $(`.quantity-display[data-product-id="${productId}"]`);
                let currentQty = parseInt($quantityDisplay.text());

                if (currentQty <= 1) {
                    return;
                }

                $quantityDisplay.text(currentQty - 1);
            });

            // Add to cart
            $('.add-to-cart').click(function() {
                const productId = $(this).data('id');
                const productName = $(this).data('name');
                const $quantityDisplay = $(`.quantity-display[data-product-id="${productId}"]`);
                const quantity = parseInt($quantityDisplay.text()) || 1;

                $.ajax({
                    url: '@Url.Action("AddToCart", "Cart")',
                    type: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify({
                        productId: productId,
                        quantity: quantity
                    }),
                    success: function(response) {
                        if (response.success) {
                            $('#cartCounter').text(response.cartCount);
                            alert('✓ ' + productName + ' (Quantity: ' + quantity + ') added to cart!');
                            $quantityDisplay.text('1');
                        } else {
                            if (response.redirectToLogin) {
                                alert('⚠️ Please login first');
                                window.location.href = '@Url.Action("Login", "Account")';
                            } else {
                                alert('⚠️ ' + response.message);
                            }
                        }
                    },
                    error: function() {
                        alert('❌ Error adding product to cart');
                    }
                });
            });

            function loadCartCount() {
                $.ajax({
                    url: '@Url.Action("GetCartCount", "Cart")',
                    type: 'GET',
                    success: function(response) {
                        $('#cartCounter').text(response.count);
                    }
                });
            }
        });
    </script>
</body>
</html>